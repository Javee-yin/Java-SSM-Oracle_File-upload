<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.ncu.dao.IimgDao">
    <resultMap id="imgMapper" type="cn.edu.ncu.pojo.Img">
        <id column="IMG_ID" jdbcType="NUMERIC" property="imgId"/>
        <result column="IMG_PATH" jdbcType="VARCHAR" property="imgPath"/>
        <result column="AUTHOR" jdbcType="VARCHAR" property="author"/>
        <result column="VALID" jdbcType="NUMERIC" property="valid"/>
    </resultMap>
    <sql id="Base_Column_List">
        IMG_ID, IMG_PATH, AUTHOR, VALID
    </sql>

    <insert id="save" parameterType="cn.edu.ncu.pojo.Img">
        INSERT INTO T_IMG(IMG_ID, IMG_PATH, AUTHOR, VALID)
        VALUES(SEQ_IMG.Nextval, #{imgPath,jdbcType=VARCHAR}, 'Javee', 1)
    </insert>

</mapper>